{
  "name": "speed-reader",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/test/test.html",
    "start-settings": "parcel src/settings/settings.html",
    "test": "mocha src/test/**/*.test.ts -r jsdom-global/register -r ts-node/register",
    "build-settings": "parcel build src/settings/settings.html --out-dir build/ --out-file settings --no-source-maps --no-minify",
    "build": "yarn test && parcel build src/main/speed-reader.ts --out-dir build/ --out-file speed-reader.js --no-source-maps --no-minify",
    "package": "zip -r extension.zip build icons extension.js manifest.json"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.14",
    "chai": "^4.2.0",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "less": "^4.1.2",
    "mocha": "^8.2.1",
    "parcel-bundler": "^1.12.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
