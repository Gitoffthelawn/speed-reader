{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["mocha"],
  },
  "include": ["./"],
  "exclude": ["node_modules", "dist"]
}
